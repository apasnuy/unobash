# Screen uses .bashrc instead .bash_profile
shell -$SHELL
# set screen scrollback
scrollback 1000000

screen -t git
select 0
stuff "hgit^M"
screen -t zsh
select 1
screen -t zsh
select 2
screen -t zsh
select 3
screen -t zsh
select 4
screen -t zsh
select 5
screen -t "---------------  Run  ----------------"
select 6
screen -t "Hybris START"
select 7
stuff "hplat^M"
stuff ". ./setantenv.sh^M"
stuff "ant clean all updatesystem -Dtenant=master && sh hybrisserver.sh debug  &> \$HYBRIS_STARTUP_LOG_FILE"
screen -t "Hybris STOP"
select 8
stuff "hplat^M"
stuff "sh hybrisserver.sh stop"
screen -t "LOGS"
select 9
stuff "hlog"
screen -t "Docker"
select 10
stuff "hgit^M"
stuff "docker-compose up -d^M"
